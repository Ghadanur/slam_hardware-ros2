<?xml version="1.0"?>
<robot name="rover">

  <!-- ========== MATERIAL DEFINITIONS ========== -->
  <material name="body_teal">
    <color rgba="0.0 1.0 1.0 1.0"/>
  </material>
  <material name="wheel_rim">
    <color rgba="0.7 0.7 0.75 1.0"/>
  </material>
  <material name="wheel_hub">
    <color rgba="0.2 0.2 0.2 1.0"/>
  </material>
  <material name="wheel_tread">
    <color rgba="0.05 0.05 0.05 1.0"/>
  </material>
  <material name="green_laser">
    <color rgba="0 1.0 0 1.0"/>
  </material>

  <!-- ========== GAZEBO MATERIALS ========== -->
  <gazebo reference="base_link">
    <material>Gazebo/Blue</material>
  </gazebo>
  <gazebo reference="front_left_wheel">
    <material>Gazebo/Black</material>
  </gazebo>
  <gazebo reference="front_right_wheel">
    <material>Gazebo/Black</material>
  </gazebo>
  <gazebo reference="rear_left_wheel">
    <material>Gazebo/Black</material>
  </gazebo>
  <gazebo reference="rear_right_wheel">
    <material>Gazebo/Black</material>
  </gazebo>

  <!-- ========== BASE FOOTPRINT ========== -->
  <link name="base_footprint"/>

  <joint name="base_footprint_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0.03" rpy="0 0 0"/>
  </joint>

  <!-- ========== MAIN BODY ========== -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.5 0.3 0.03"/>
      </geometry>
      <origin xyz="0 0 0.015" rpy="0 0 0"/>
      <material name="body_teal"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.5 0.3 0.03"/>
      </geometry>
      <origin xyz="0 0 0.015" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="3.0"/>
      <origin xyz="0 0 0.015"/>
      <inertia ixx="0.05" ixy="0" ixz="0"
               iyy="0.1" iyz="0"
               izz="0.05"/>
    </inertial>
  </link>

  <!-- ========== WHEELS ========== -->

  <!-- Front Left Wheel -->
  <link name="front_left_wheel">
    <visual>
      <geometry>
        <cylinder length="0.04" radius="0.06"/>
      </geometry>
      <material name="wheel_tread"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.04" radius="0.06"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.3"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.0008" ixy="0" ixz="0"
               iyy="0.0008" iyz="0"
               izz="0.0008"/>
    </inertial>
  </link>

  <joint name="front_left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="front_left_wheel"/>
    <origin xyz="0.2 -0.14 -0.06" rpy="1.570796 0 0"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="0.1" friction="0.5"/>
  </joint>

  <!-- Front Right Wheel -->
  <link name="front_right_wheel">
    <visual>
      <geometry>
        <cylinder length="0.04" radius="0.06"/>
      </geometry>
      <material name="wheel_tread"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.04" radius="0.06"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.3"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.0008" ixy="0" ixz="0"
               iyy="0.0008" iyz="0"
               izz="0.0008"/>
    </inertial>
  </link>

  <joint name="front_right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="front_right_wheel"/>
    <origin xyz="0.2 0.14 -0.06" rpy="1.570796 0 0"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="0.1" friction="0.5"/>
  </joint>

  <!-- Rear Left Wheel -->
  <link name="rear_left_wheel">
    <visual>
      <geometry>
        <cylinder length="0.04" radius="0.06"/>
      </geometry>
      <material name="wheel_tread"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.04" radius="0.06"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.3"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.0008" ixy="0" ixz="0"
               iyy="0.0008" iyz="0"
               izz="0.0008"/>
    </inertial>
  </link>

  <joint name="rear_left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rear_left_wheel"/>
    <origin xyz="-0.2 0.14 -0.06" rpy="1.570796 0 0"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="0.1" friction="0.5"/>
    <mimic joint="front_left_wheel_joint" multiplier="1" offset="0"/>
  </joint>

  <!-- Rear Right Wheel -->
  <link name="rear_right_wheel">
    <visual>
      <geometry>
        <cylinder length="0.04" radius="0.06"/>
      </geometry>
      <material name="wheel_tread"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.04" radius="0.06"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.3"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.0008" ixy="0" ixz="0"
               iyy="0.0008" iyz="0"
               izz="0.0008"/>
    </inertial>
  </link>

  <joint name="rear_right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rear_right_wheel"/>
    <origin xyz="-0.2 -0.14 -0.06" rpy="1.570796 0 0"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="0.1" friction="0.5"/>
    <mimic joint="front_right_wheel_joint" multiplier="1" offset="0"/>
    
  </joint>

  <!-- ========== CAMERA MOUNT ========== -->
  <link name="camera_mount">
    <visual>
      <geometry>
        <box size="0.08 0.04 0.04"/>
      </geometry>
      <origin xyz="0 0 0.02" rpy="0 0 0"/>
      <material name="wheel_hub"/>
    </visual>
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 0.02"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" 
               iyy="0.0001" iyz="0.0" 
               izz="0.0001"/>
    </inertial>
  </link>

  <joint name="camera_joint" type="fixed">
    <parent link="base_link"/>
    <child link="camera_mount"/>
    <origin xyz="0.25 0 0.03" rpy="0 0 0"/>
  </joint>

  <!-- ========== CAMERA ========== -->
<link name="camera_link">
  <visual>
    <geometry>
      <box size="0.05 0.05 0.03"/>
    </geometry>
    <material name="body_teal"/>
  </visual>
  <collision>
    <geometry>
      <box size="0.05 0.05 0.03"/>
    </geometry>
  </collision>
  <inertial>
    <mass value="0.05"/>
    <inertia ixx="0.00001" ixy="0.0" ixz="0.0"
             iyy="0.00001" iyz="0.0"
             izz="0.00001"/>
  </inertial>
</link>

<joint name="camera_link_joint" type="fixed">
  <parent link="camera_mount"/>
  <child link="camera_link"/>
  <origin xyz="0 0 0.05" rpy="0 0 0"/>
</joint>

<!-- Gazebo Camera Plugin -->
<gazebo reference="camera_link">
  <sensor name="camera" type="camera">
    <update_rate>30.0</update_rate>
    <camera>
      <horizontal_fov>1.0472</horizontal_fov> <!-- 60 degrees -->
      <image>
        <width>640</width>
        <height>480</height>
        <format>R8G8B8</format>
      </image>
      <clip>
        <near>0.05</near>
        <far>100.0</far>
      </clip>
      <noise>
        <type>gaussian</type>
        <mean>0.0</mean>
        <stddev>0.007</stddev>
      </noise>
    </camera>
    <plugin name="camera_controller" filename="libgazebo_ros_camera.so">
      <ros>
        <namespace>/</namespace>
      </ros>
      <camera_name>rover_camera</camera_name>
      <frame_name>camera_link</frame_name>
      <hack_baseline>0.07</hack_baseline>
    </plugin>
  </sensor>
</gazebo>

  <!-- ========== LASER SENSOR ========== -->
  <!-- Laser Link -->
<link name="laser_link">
  <visual>
    <geometry>
      <cylinder length="0.05" radius="0.05"/>
    </geometry>
    <material name="green_laser">
      <color rgba="0 1.0 0 1.0"/>
    </material>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </visual>
  <collision>
    <geometry>
      <cylinder length="0.05" radius="0.05"/>
    </geometry>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </collision>
  <inertial>
    <mass value="0.1"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <inertia ixx="0.001" ixy="0.0" ixz="0.0"
             iyy="0.001" iyz="0.0"
             izz="0.001"/>
  </inertial>
</link>

<!-- Joint connecting laser to base_link -->
<joint name="laser_joint" type="fixed">
  <parent link="base_link"/>
  <child link="laser_link"/>
  <origin xyz="0 0 0.05"  rpy="0 0 0"/> <!-- Adjust height as needed -->
</joint>

<!-- ========== GAZEBO PLUGINS ========== -->
  <gazebo reference="laser_link">
    <sensor name="laser" type="ray">
      <pose>0 0 0 0 0 0</pose>
      <visualize>true</visualize>
      <update_rate>20.0</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>720</samples>
            <resolution>1.0</resolution>
            <min_angle>-0.785</min_angle>
            <max_angle>0.785</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.1</min>
          <max>10.0</max>
          <resolution>0.01</resolution>
        </range>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.01</stddev>
        </noise>
      </ray>
      <plugin name="gazebo_ros_laser_controller" filename="libgazebo_ros_ray_sensor.so">
        <ros>
         <remapping>~/out:=scan</remapping>
        </ros>
        <topicName>/scan</topicName>
        <frameName>laser_link</frameName>
        <output_type>sensor_msgs/LaserScan</output_type>
      </plugin>
    </sensor>
  </gazebo>



  <gazebo>
    <plugin name="diff_drive_controller" filename="libgazebo_ros_diff_drive.so">
      <ros>
        <namespace>/</namespace>
      </ros>
      <update_rate>20.0</update_rate>
      <left_joint>front_left_wheel_joint</left_joint>
      <right_joint>front_right_wheel_joint</right_joint>
      <wheel_separation>0.4</wheel_separation>
      <wheel_diameter>0.12</wheel_diameter>
      <command_topic>cmd_vel</command_topic>
      <odometry_topic>odom</odometry_topic>
      <odometry_frame>odom</odometry_frame>
      <robot_base_frame>base_footprint</robot_base_frame>
      <publish_odom>true</publish_odom>
      <publish_odom_tf>true</publish_odom_tf>
      <publish_wheel_tf>true</publish_wheel_tf>
      <legacy_mode>false</legacy_mode>
    </plugin>
  </gazebo>
  <gazebo>
  <plugin name="joint_state_controller" filename="libgazebo_ros_joint_state_publisher.so">
    <joint_name>front_left_wheel_joint</joint_name>
    <joint_name>front_right_wheel_joint</joint_name>
    <joint_name>rear_left_wheel_joint</joint_name>
    <joint_name>rear_right_wheel_joint</joint_name>
    <update_rate>50</update_rate>
  </plugin>
  </gazebo>
</robot>